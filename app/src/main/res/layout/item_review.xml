<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl"
    android:background="#F3F3F3"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RatingBar
        android:id="@+id/rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:ratingBarStyleSmall"
        android:progressTint="#ffcd07"
        tools:rating="4.5"
        android:numStars="5"
        android:stepSize=".5"
        android:isIndicator="false"
        android:secondaryProgressTint="@android:color/transparent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4.5"
        android:textColor="@color/yellow"
        android:textSize="12sp"
        android:fontFamily="@font/lato_regular"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="@id/rb"
        app:layout_constraintBottom_toBottomOf="@id/rb"
        app:layout_constraintStart_toEndOf="@id/rb"/>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="좋다좋다좋다좋다좋다좋다좋다좋다좋다좋다좋다좋다좋다좋다좋다"
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/rb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvWriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김유저"
        android:textColor="@color/color767676"
        android:fontFamily="@font/lato_regular"
        android:textSize="12sp"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023-10-23"
        android:textColor="@color/color767676"
        android:fontFamily="@font/lato_regular"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tvWriter"
        app:layout_constraintStart_toEndOf="@id/tvWriter"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>