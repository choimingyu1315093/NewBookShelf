<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".presentation.view.post.AddPostFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_cancel2"
            android:layout_marginStart="20dp"
            app:tint="@color/black" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd"
            android:layout_width="72dp"
            android:layout_height="31dp"
            android:text="등록"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:textColor="@color/md_theme_primary"
            android:background="@drawable/btn_b6f1bc_no_10"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etTitle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="text"
        android:textColor="@color/color767676"
        android:hint="제목"
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:theme="@style/EditTextStyleLogin"
        android:textColorHint="@color/color767676"
        android:paddingHorizontal="12dp"
        android:background="@drawable/et_white_767676_8"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/vLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="#e9e9e9"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/etTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clReading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/vLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPlace"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:textColor="@color/color767676"
            android:enabled="false"
            android:hint="모임 장소"
            android:fontFamily="@font/lato_regular"
            android:textSize="14sp"
            android:theme="@style/EditTextStyleLogin"
            android:textColorHint="@color/color767676"
            android:paddingHorizontal="12dp"
            android:background="@drawable/et_white_767676_8"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/ivPlace"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_search"
            app:tint="@color/color767676"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/etPlace"
            app:layout_constraintEnd_toEndOf="@id/etPlace"
            app:layout_constraintBottom_toBottomOf="@id/etPlace"/>

        <LinearLayout
            android:id="@+id/li"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/etPlace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etDate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="text"
                android:textColor="@color/color767676"
                android:enabled="false"
                android:hint="날짜"
                android:fontFamily="@font/lato_regular"
                android:textSize="14sp"
                android:theme="@style/EditTextStyleLogin"
                android:textColorHint="@color/color767676"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="1dp"
                android:background="@drawable/et_white_767676_8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etTime"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="text"
                android:textColor="@color/color767676"
                android:enabled="false"
                android:hint="시간"
                android:fontFamily="@font/lato_regular"
                android:textSize="14sp"
                android:layout_marginStart="1dp"
                android:theme="@style/EditTextStyleLogin"
                android:textColorHint="@color/color767676"
                android:paddingHorizontal="12dp"
                android:background="@drawable/et_white_767676_8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etBook"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:textColor="@color/color767676"
            android:enabled="false"
            android:hint="주제 책"
            android:fontFamily="@font/lato_regular"
            android:textSize="14sp"
            android:theme="@style/EditTextStyleLogin"
            android:textColorHint="@color/color767676"
            android:paddingHorizontal="12dp"
            android:background="@drawable/et_white_767676_8"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/li"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/ivBook"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_search"
            app:tint="@color/color767676"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/etBook"
            app:layout_constraintEnd_toEndOf="@id/etBook"
            app:layout_constraintBottom_toBottomOf="@id/etBook"/>

        <View
            android:id="@+id/vLine2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="#e9e9e9"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/etBook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/etContent"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:gravity="top"
        android:textColor="@color/color767676"
        android:theme="@style/EditTextStyleLogin"
        android:textColorHint="@color/color767676"
        android:background="@drawable/btn_e9e9e9_no_10"
        android:ems="10"
        android:hint="내용"
        android:inputType="textMultiLine"
        android:imeOptions="actionSearch"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:textSize="14sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/clReading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>