<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".presentation.view.post.AddPostFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_cancel2"
            android:layout_marginStart="20dp"
            app:tint="@color/black" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd"
            android:layout_width="72dp"
            android:layout_height="31dp"
            android:text="등록"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:textColor="@color/md_theme_primary"
            android:background="@drawable/btn_b6f1bc_no_10"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etTitle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:hint="제목"
        android:fontFamily="@font/lato_regular"
        android:textSize="20sp"
        android:theme="@style/EditTextStyleLogin"
        android:textColorHint="@color/color767676"
        android:paddingHorizontal="12dp"
        android:background="@null"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/vLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#e9e9e9"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/etTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clReading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vLine">

        <TextView
            android:id="@+id/txtPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/lato_regular"
            android:text="모임 장소"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/etPlace"
            app:layout_constraintBottom_toBottomOf="@id/etPlace"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPlace"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:background="@drawable/et_e9e9e9_999"
            android:ellipsize="end"
            android:enabled="false"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:textColorHint="@color/color767676"
            android:textSize="14sp"
            android:hint="모임 장소를 검색하세요."
            android:layout_marginHorizontal="8dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintEnd_toStartOf="@id/btnPlace"
            app:layout_constraintStart_toEndOf="@id/txtPlace"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPlace"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/btn_main_no_999"
            android:fontFamily=""
            android:text="검색"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/lato_regular"
            android:text="모임 일자"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtPlace"
            app:layout_constraintStart_toStartOf="parent" />
        <LinearLayout
            android:id="@+id/li"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/txtDate"
            app:layout_constraintBottom_toBottomOf="@id/txtDate"
            app:layout_constraintStart_toEndOf="@id/txtDate"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etDate"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:inputType="text"
                android:textColor="@color/color767676"
                android:focusable="false"
                android:hint="날짜"
                android:fontFamily="@font/lato_regular"
                android:textSize="14sp"
                android:theme="@style/EditTextStyleLogin"
                android:textColorHint="@color/color767676"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="1dp"
                android:background="@drawable/et_no_e9e9e9_999"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etTime"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:inputType="text"
                android:textColor="@color/color767676"
                android:focusable="false"
                android:hint="시간"
                android:fontFamily="@font/lato_regular"
                android:textSize="14sp"
                android:layout_marginStart="1dp"
                android:theme="@style/EditTextStyleLogin"
                android:textColorHint="@color/color767676"
                android:paddingHorizontal="12dp"
                android:background="@drawable/et_no_e9e9e9_999"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/lato_regular"
            android:text="주제 책"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtDate"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etBook"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:background="@drawable/et_e9e9e9_999"
            android:ellipsize="end"
            android:enabled="false"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:textColorHint="@color/color767676"
            android:textSize="14sp"
            android:hint="주제 책을 검색하세요."
            android:paddingHorizontal="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/txtBook"
            app:layout_constraintBottom_toBottomOf="@id/txtBook"
            app:layout_constraintStart_toEndOf="@id/txtBook"
            app:layout_constraintEnd_toStartOf="@id/btnBook"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBook"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/btn_main_no_999"
            android:fontFamily=""
            android:text="검색"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/etBook"
            app:layout_constraintBottom_toBottomOf="@id/etBook"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/vLine2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#e9e9e9"
            app:layout_constraintTop_toBottomOf="@id/etBook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/etContent"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:gravity="top"
        android:textColor="@color/black"
        android:theme="@style/EditTextStyleLogin"
        android:textColorHint="@color/color767676"
        android:background="@null"
        android:ems="10"
        android:hint="내용"
        android:inputType="textMultiLine"
        android:imeOptions="actionSearch"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:textSize="14sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/clReading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>