<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".presentation.view.login.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@drawable/login_logo"
            android:layout_marginTop="130dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etId"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:hint="아이디"
            android:textColorHint="@color/color767676"
            android:fontFamily="@font/lato_regular"
            android:textSize="14sp"
            android:textColor="@color/color767676"
            android:theme="@style/EditTextStyleLogin"
            android:paddingHorizontal="12dp"
            android:background="@drawable/et_white_767676_8"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/ivLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:hint="비밀번호"
            android:textColorHint="@color/color767676"
            android:fontFamily="@font/lato_regular"
            android:textSize="14sp"
            android:textColor="@color/color767676"
            android:theme="@style/EditTextStyleLogin"
            android:paddingHorizontal="12dp"
            android:background="@drawable/et_white_767676_8"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:enabled="false"
            android:background="@drawable/btn_e9e9e9_10"
            android:text="로그인"
            android:fontFamily="@font/lato_regular"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/etPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/txtFindId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:textColor="@color/color767676"
            android:textSize="12sp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            app:layout_constraintEnd_toStartOf="@id/txtFindPw"/>
        <TextView
            android:id="@+id/txtFindPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   ⎸  비밀번호 찾기  ⎸   "
            android:textColor="@color/color767676"
            android:textSize="12sp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/txtSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/color767676"
            android:textSize="12sp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            app:layout_constraintStart_toEndOf="@id/txtFindPw"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#767676"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/txtEasyLogin"
            app:layout_constraintBottom_toBottomOf="@id/txtEasyLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txtEasyLogin"/>
        <TextView
            android:id="@+id/txtEasyLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="간편 로그인"
            android:textColor="@color/color767676"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@id/txtFindPw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#767676"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/txtEasyLogin"
            app:layout_constraintBottom_toBottomOf="@id/txtEasyLogin"
            app:layout_constraintStart_toEndOf="@id/txtEasyLogin"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/ivGoogle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_google"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtEasyLogin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivNaver"/>
        <ImageView
            android:id="@+id/ivNaver"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_naver"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/txtEasyLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/ivKakao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_kakao"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/txtEasyLogin"
            app:layout_constraintStart_toEndOf="@id/ivNaver"/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>