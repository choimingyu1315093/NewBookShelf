<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_no_20"
    android:padding="20dp"
    tools:context=".presentation.view.post.dialog.ReadingClassDeleteDialog">

    <TextView
        android:id="@+id/txtNotice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="알림"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임을 삭제하시겠습니까?"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txtNotice"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모든 신청자에게 알림이 발송되며, 모임 등록 시 지불한 가등록비는 반환되지 않습니다."
        android:textColor="#797979"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/txtQuestion"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5013477" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_e9e9e9_no_10"
            android:text="취소"
            android:fontFamily="@font/lato_regular"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gl1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_lightred_no_10"
            android:text="삭제"
            android:fontFamily="@font/lato_regular"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/gl1"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>