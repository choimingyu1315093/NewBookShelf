<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.setting.SettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_background"
        android:paddingBottom="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@drawable/home_logo"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:src="@drawable/icon_leaves"
                app:layout_constraintTop_toTopOf="@id/btnMoney"
                app:layout_constraintBottom_toBottomOf="@id/btnMoney"
                app:layout_constraintEnd_toStartOf="@id/btnMoney"
                android:layout_marginRight="-30dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMoney"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/btn_no_767676_30"
                tools:text="10장"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="홍길동 님, 환영합니다."
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/lato_regular"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cl1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ivBell"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_setting_bell_"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txtBell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림"
            android:fontFamily="@font/lato_regular"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            app:layout_constraintStart_toEndOf="@id/ivBell"/>
        <TextView
            android:id="@+id/txtChatSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채팅 알림"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtBell"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swChat"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginEnd="20dp"
            android:checked="true"
            android:thumb="@drawable/switch_thumb"
            app:layout_constraintBottom_toBottomOf="@id/txtChatSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtChatSwitch"
            app:track="@drawable/switch_track_selector" />
        <TextView
            android:id="@+id/txtMarketingSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마케팅 알림"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtChatSwitch"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swMarketing"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginEnd="20dp"
            android:checked="true"
            android:thumb="@drawable/switch_thumb"
            app:layout_constraintBottom_toBottomOf="@id/txtMarketingSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtMarketingSwitch"
            app:track="@drawable/switch_track_selector" />
        <TextView
            android:id="@+id/txtNearSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 주변 읽고 싶은 책 알림"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/swMarketing"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txtNearSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="내가 읽고 싶은 책을 보유한 유저가 5km 내에 생기면 알림을 받습니다."
            android:fontFamily="@font/lato_regular"
            android:textSize="10sp"
            android:textColor="@color/color767676"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtNearSwitch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/swNear"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swNear"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginEnd="20dp"
            android:checked="true"
            android:thumb="@drawable/switch_thumb"
            app:layout_constraintBottom_toBottomOf="@id/txtNearSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtNearSwitch"
            app:track="@drawable/switch_track_selector" />

        <View
            android:id="@+id/v"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            android:background="#e9e9e9"
            app:layout_constraintTop_toBottomOf="@id/txtNearSub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ivChat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_chat2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/v"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txtChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채팅"
            android:fontFamily="@font/lato_regular"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/ivChat"
            app:layout_constraintBottom_toBottomOf="@id/ivChat"
            app:layout_constraintStart_toEndOf="@id/ivChat"/>
        <TextView
            android:id="@+id/txtChatRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채팅 요청"
            android:fontFamily="@font/lato_regular"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtChat"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txtChatRequestSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="상대방의 채팅 요청을 차단할 수 있습니다."
            android:fontFamily="@font/lato_regular"
            android:textSize="10sp"
            android:textColor="@color/color767676"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtChatRequest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swChatRequest"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginEnd="20dp"
            android:checked="true"
            android:thumb="@drawable/switch_thumb"
            app:layout_constraintBottom_toBottomOf="@id/txtChatRequest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtChatRequest"
            app:track="@drawable/switch_track_selector" />

        <View
            android:id="@+id/v2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            android:background="#e9e9e9"
            app:layout_constraintTop_toBottomOf="@id/txtChatRequestSub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ivCharge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_card"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/v2"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txtCharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제"
            android:fontFamily="@font/lato_regular"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/ivCharge"
            app:layout_constraintBottom_toBottomOf="@id/ivCharge"
            app:layout_constraintStart_toEndOf="@id/ivCharge"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl3"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtCharge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtCashClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="충전하기"
                android:fontFamily="@font/lato_regular"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl4"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/cl3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtChargeLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구매 내역"
                android:fontFamily="@font/lato_regular"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/v3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            android:background="#e9e9e9"
            app:layout_constraintTop_toBottomOf="@id/cl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_setting_user"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/v3"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txtUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정"
            android:fontFamily="@font/lato_regular"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/ivUser"
            app:layout_constraintBottom_toBottomOf="@id/ivUser"
            app:layout_constraintStart_toEndOf="@id/ivUser"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl5"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtPasswordChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경"
                android:fontFamily="@font/lato_regular"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl6"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/cl5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtSecession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원 탈퇴"
                android:fontFamily="@font/lato_regular"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl7"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/cl6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:fontFamily="@font/lato_regular"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>