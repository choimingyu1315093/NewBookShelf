<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivBook"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/test_book"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="돈의 속성"
        android:fontFamily="@font/lato_regular"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toEndOf="@id/ivBook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="과학적 사고를 할 줄 아는 사람은 무엇이 다를까?"
        android:fontFamily="@font/lato_regular"
        android:textColor="#797979"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toEndOf="@id/ivBook"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvPlace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="서초구립 반포도서관"
        android:fontFamily="@font/lato_regular"
        android:textSize="12sp"
        android:textColor="@color/md_theme_primary"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvContent"
        app:layout_constraintStart_toEndOf="@id/ivBook"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="11/21 (목) 21:00"
        android:textSize="12sp"
        android:fontFamily="@font/lato_regular"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPlace"
        app:layout_constraintStart_toEndOf="@id/ivBook"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#e9e9e9"
        app:layout_constraintTop_toBottomOf="@id/ivBook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>