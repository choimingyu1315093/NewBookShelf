<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:background="@drawable/bg_white_no_20"
    tools:context=".presentation.view.map.dialog.NearBookDialog">

    <TextView
        android:id="@+id/txtWishBook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="홍길동님이 읽고 싶었던"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="&lt;돈의 속성&gt;"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtWishBook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/ivBook"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/test_book"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtChangeBook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="해당 책을 보유 중인 유저와 책을 교환해보세요.\n채팅하기를 클릭하시면 교환권 1장이 소모됩니다."
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:textColor="@color/color767676"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/ivBook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOk"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@drawable/btn_main_no_10"
        android:text="채팅하기"
        android:fontFamily="@font/lato_regular"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="80dp"
        app:layout_constraintTop_toBottomOf="@id/txtChangeBook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>