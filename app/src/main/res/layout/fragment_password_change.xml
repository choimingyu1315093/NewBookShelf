<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    tools:context=".presentation.view.setting.PasswordChangeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="비밀번호 변경"
            android:fontFamily="@font/lato_regular"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"/>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_lock"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="비밀번호는 영문, 숫자, 특수문자를 포함하여\n8자~15자 이내로 설정해 주세요."
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtCurrentPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 비밀번호"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtInfo"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etCurrentPw"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:hint="현재 비밀번호를 입력해주세요."
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:theme="@style/EditTextStyleLogin"
        android:paddingHorizontal="12dp"
        android:background="@drawable/et_white_767676_8"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/txtCurrentPw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtNewPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 비밀번호"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/etCurrentPw"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etNewPw"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:hint="8~15자의 영문, 숫자, 특수문자 혼합"
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:theme="@style/EditTextStyleLogin"
        android:paddingHorizontal="12dp"
        android:background="@drawable/et_white_767676_8"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/txtNewPw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtNewWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="❗️비밀번호는 영문, 숫자, 특문자를 포함하여 8~15자이어야 합니다."
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/etNewPw"
        app:layout_constraintStart_toStartOf="@id/etNewPw"
        app:layout_constraintEnd_toEndOf="@id/etNewPw"/>

    <TextView
        android:id="@+id/txtCheckPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtNewWarning"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etCheckPw"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:hint="비밀번호를 확인해주세요."
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:theme="@style/EditTextStyleLogin"
        android:paddingHorizontal="12dp"
        android:background="@drawable/et_white_767676_8"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/txtCheckPw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtCheckWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="❗️비밀번호가 일치하지 않습니다."
        android:fontFamily="@font/lato_regular"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/etCheckPw"
        app:layout_constraintStart_toStartOf="@id/etCheckPw"
        app:layout_constraintEnd_toEndOf="@id/etCheckPw"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChange"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_e9e9e9_no_10"
        android:text="변경하기"
        android:fontFamily="@font/lato_regular"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>