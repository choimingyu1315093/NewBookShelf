<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="14dp">
            
            <ImageView
                android:id="@+id/ivBook"
                android:layout_width="60dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="돈의 속성"
                android:fontFamily="@font/lato_regular"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintStart_toEndOf="@id/ivBook"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tvWriter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="글쓴이 ⎪ 출판사"
                android:fontFamily="@font/lato_regular"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toEndOf="@id/ivBook"
                app:layout_constraintEnd_toEndOf="parent"/>
            <RatingBar
                android:id="@+id/rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:ratingBarStyleSmall"
                android:progressTint="#ffcd07"
                android:numStars="5"
                android:stepSize=".5"
                android:isIndicator="false"
                android:secondaryProgressTint="@android:color/transparent"
                android:layout_marginTop="6dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvWriter"
                app:layout_constraintStart_toEndOf="@id/ivBook"/>
            <TextView
                android:id="@+id/tvAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.0"
                android:textColor="@color/yellow"
                android:textSize="12sp"
                android:fontFamily="@font/lato_regular"
                android:layout_marginStart="2dp"
                app:layout_constraintTop_toTopOf="@id/rb"
                app:layout_constraintBottom_toBottomOf="@id/rb"
                app:layout_constraintStart_toEndOf="@id/rb"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHaveBook"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="보유 중인 책"
                android:visibility="gone"
                tools:visibility="visible"
                android:fontFamily="@font/lato_regular"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:background="@drawable/btn_e9e9e9_no_10"
                android:layout_marginTop="28dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvWriter"
                app:layout_constraintStart_toEndOf="@id/ivBook"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnWishBook"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:text="읽고 싶은 책"
                android:fontFamily="@font/lato_regular"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:background="@drawable/btn_e9e9e9_no_10"
                android:layout_marginTop="28dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvWriter"
                app:layout_constraintStart_toEndOf="@id/btnHaveBook"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReadingBook"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:text="읽고 있는 책"
                android:fontFamily="@font/lato_regular"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:background="@drawable/btn_e9e9e9_no_10"
                android:layout_marginTop="28dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvWriter"
                app:layout_constraintStart_toEndOf="@id/btnWishBook"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReadBook"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:text="읽은 책"
                android:fontFamily="@font/lato_regular"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:background="@drawable/btn_e9e9e9_no_10"
                android:layout_marginTop="28dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvWriter"
                app:layout_constraintStart_toEndOf="@id/btnReadingBook"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>