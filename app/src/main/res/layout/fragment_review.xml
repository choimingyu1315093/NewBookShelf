<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="2dp"
    tools:context=".presentation.view.detail.ReviewFragment">

    <TextView
        android:id="@+id/txtAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="평균 평점"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <RatingBar
        android:id="@+id/rb"
        style="?android:ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:isIndicator="false"
        android:numStars="5"
        android:progressTint="#ffcd07"
        android:rating="0"
        android:secondaryProgressTint="@android:color/transparent"
        android:stepSize=".5"
        app:layout_constraintBottom_toBottomOf="@id/txtAverage"
        app:layout_constraintStart_toEndOf="@id/txtAverage"
        app:layout_constraintTop_toTopOf="@id/txtAverage" />
    <TextView
        android:id="@+id/tvAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.0"
        android:textColor="@color/yellow"
        android:textSize="12sp"
        android:fontFamily="@font/lato_regular"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="@id/rb"
        app:layout_constraintBottom_toBottomOf="@id/rb"
        app:layout_constraintStart_toEndOf="@id/rb"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDelete"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/btn_lightred_no_10"
        android:text="삭제"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/txtAverage"
        app:layout_constraintEnd_toStartOf="@id/btnWrite"
        app:layout_constraintTop_toTopOf="@id/txtAverage" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnWrite"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:text="작성"
        android:fontFamily="@font/lato_regular"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/btn_main_no_10"
        android:layout_gravity="end"
        app:layout_constraintBottom_toBottomOf="@id/txtAverage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtAverage" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAverage"/>
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="77dp"
        android:fontFamily="@font/lato_regular"
        android:text="후기를 작성해 보세요."
        android:textColor="#979797"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvReview" />
</androidx.constraintlayout.widget.ConstraintLayout>